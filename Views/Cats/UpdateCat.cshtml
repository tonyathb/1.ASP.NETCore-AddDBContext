@model Cat

@{
    ViewData["Title"] = "UpdateNew";
}}

<h2>Add new cat</h2>
<form action="/Cats/UpdateCat" method="post">
    <label asp-for="Name">NAME:     </label>
    <input type="text" name="Name" value="@(Model.Name)"/><br /><br />

    <label asp-for="Age">Age:     </label>
    <input type="text" name="Age" value="@Model.Age"/><br /><br />

    <label asp-for="Bread">Bread:     </label>
    <input type="text" name="Bread" value="@(Model.Bread)"/><br /><br />

    <label asp-for="ImageUrl">Image URL:     </label>
    <input type="text" name="ImageUrl" value="@(Model.ImageUrl)"/><br /><br />
    <br />
    <input type="submit" value="Update New Cat" />
</form>


